<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="600"
        x:Class="IESSRTools.Desktop.Views.DoFile"
        Title="Do File Viewer"
        Icon="/Assets/avalonia-logo.ico"
        Width="600" Height="600"
        FontFamily="Centaur" FontSize="16">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Menu BorderThickness="0 0 0 1" BorderBrush="Gray">
      <MenuItem Header="Save As" Click="SaveAsDoFile"/>
    </Menu>

    <TextBox x:Name="viewer" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" FontFamily="宋体,Simsun,微软雅黑,Microsoft YaHei,苹方-简,宋体-简" BorderThickness="0" Margin="5" Grid.Row="1"/>
  </Grid>
</Window>
