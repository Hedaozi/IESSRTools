<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="IESSRTools.Desktop.Views.MessageBox"
        Icon="/Assets/avalonia-logo.ico"
        Title="Message Box"
        Height="150" Width="300" CanResize="False" WindowStartupLocation="CenterOwner"
        FontFamily="{DynamicResource TranslatableFont}" FontSize="16">
  <TextPresenter x:Name="message" VerticalAlignment="Center" HorizontalAlignment="Center"/>
</Window>
