<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:IESSRTools.Desktop"
             x:Class="IESSRTools.Desktop.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
  <Application.Resources>
    <FontFamily x:Key="UntranslatableFont">宋体,Simsun,微软雅黑,Microsoft YaHei,苹方-简,宋体-简</FontFamily>
  </Application.Resources>

    <Application.Styles>
      <StyleInclude Source='/Assets/Localizations/en.axaml'/>
      <FluentTheme Mode="Light"/>
    </Application.Styles>
</Application>
